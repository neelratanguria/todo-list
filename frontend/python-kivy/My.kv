<MyGrid>:

    email: email
    password: password

    GridLayout:
        cols:1
        size: root.width - 200, root.height -200
        pos: 100, 100

        GridLayout:
            cols:2

            Label:
                text: "email: "

            TextInput:
                id: email
                multiline:False

            Label:
                text: "password: "

            TextInput:
                id: password
                multiline:False

        Button:
            text:"sign up"
            on_press: root.btn()